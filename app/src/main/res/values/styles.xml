<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/mainColor</item>
        <item name="android:statusBarColor">@color/mainColor</item>
        <item name="colorAccent">@color/mainColor</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnimationStyle</item>
    </style>

    <style name="ActivityAnimationStyle" parent="android:Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_open_enter</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_close_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_open_exit</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_close_exit</item>
    </style>

    <style name="CommonToolBar">
        <item name="android:background">@color/mainColor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/navBarHeight</item>
    </style>

    <style name="CommonToolBar.Title" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/navBarTitleSize</item>
        <item name="android:textColor">@color/commonTitleColor</item>
    </style>

    <style name="UserInfoEdit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/common_edittext_selector</item>
    </style>

    <style name="notify_music_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/commonLabelColor</item>
        <item name="android:textSize">@dimen/notify_music_name_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="notify_music_author">
        <item name="android:textColor">@color/infoColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="notify_music_play_btn">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:src">@drawable/note_btn_play_white</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="notify_music_next_btn" parent="notify_music_play_btn">
        <item name="android:src">@drawable/note_btn_next_white</item>
    </style>

    <style name="notify_music_pre_btn" parent="notify_music_play_btn">
        <item name="android:src">@drawable/notify_play_music_pre_btn</item>
    </style>

    <style name="notify_music_close_btn" parent="notify_music_next_btn">
        <item name="android:src">@drawable/note_btn_close_white</item>
    </style>

</resources>
